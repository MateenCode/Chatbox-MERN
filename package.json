{
  "name": "Chatbox ",
  "version": "1.0.0",
  "description": "Simple chat app using React and socket",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Mateen kazia",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^1.14.6"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootstrap": "^4.3.1",
    "client": "file:client",
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "mongoose": "^5.4.4",
    "path": "^0.12.7",
    "socket.io": "^2.2.0"
  }
}
